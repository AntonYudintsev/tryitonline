#!/usr/bin/env bash

export DYALOG=/opt/mdyalog/15.0/64/unicode
export WSPATH=$DYALOG/ws
{
	echo :namespace TIO_$(head -c 16 /dev/urandom | xxd -ps)
	echo "#.⎕PATH←⍕⎕THIS"
	cat .code.tio
	echo
	echo :endnamespace
} > ~/.bin.tio.dyalog
{
	echo "{}2⎕FIX'file://$HOME/.bin.tio.dyalog'"
	cat .input.tio
	echo
} |	$DYALOG/dyalog -script "$@"
