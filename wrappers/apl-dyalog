#!/usr/bin/env bash

export DYALOG=/opt/mdyalog/15.0/64/unicode
export WSPATH=$DYALOG/ws
ns=$(head -c 16 /dev/urandom | xxd -ps)
{ echo ":namespace TIO_$ns"; cat .code.tio; echo -e '\n:endnamespace'; } > ~/.bin.tio.dyalog
{ echo -e "{}2âŽ•FIX'file://$HOME/.bin.tio.dyalog'"; cat .input.tio; echo; } |
	$DYALOG/dyalog -script "$@"
