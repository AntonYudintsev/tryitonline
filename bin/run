#!/usr/bin/env bash

error()
{
	echo -en "Status: $1\n\n"
	exit $[$1 % 60]
}

wrapper_exec=/srv/bin/wrapper
wrapper_temp=$(mktemp -d /tmp/runner.XXXX)
(( $? )) && error 500
mcs=${wrapper_temp: -4}
printf -v range s0-s0:c%u,c%u,c%u,c%u \
	$[62#${mcs:1:1}] $[62#${mcs:2:1} + 64] $[62#${mcs:3:1} + 128] $[62#${mcs:1:1} + 192]
label=system_u:system_r:sandbox_t:$range
chcon -t sandbox_file_t -l $range $wrapper_temp || error 500
echo # end HTTP header
cat <(echo -en '\x1f\x8b\x08\x00\x00\x00\x00\x00\x02\x03') - | zcat 2> /dev/null |
	timeout 65s sandbox -l $range -H $wrapper_temp -T $wrapper_temp $wrapper_exec | gzip --fast
killall -Z $range -KILL
rm -r $wrapper_temp
